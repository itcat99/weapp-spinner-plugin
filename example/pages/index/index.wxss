@import '../../spinner/spinner.wxss';

page{
  height: 100%;
}
.main {
  display: flex;
  flex-direction: column;
  align-items: center; 
  width: 100%;
  height: 100%;
  background-color: rgba(125, 125, 125, .1);
}

.title {
  font-size: 20px;
  font-weight: bold;
  color: lightcoral;
  text-shadow: 1px 1px 15px 10px #ccc;
  margin-bottom: 20px;
}

.spinner{
  margin-bottom: 10px;
}

.view{
  width: 90%;
  height: 200px;
  padding: 12px; 
  background-color: rgba(25, 75, 75, .2);
  font-size: 12px;
  color: #fff; 
  overflow: auto;
}

.view text:first-child{
  font-size: 14px;
  color: lightcoral;
}
